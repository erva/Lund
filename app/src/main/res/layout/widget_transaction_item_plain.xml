<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:padding="8dp"
    >

  <TextView
      android:id="@+id/card"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/color_widget_text_secondary"
      android:textSize="10sp"
      tools:text="*1111"
      />

  <TextView
      android:id="@+id/date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/card"
      android:gravity="center"
      android:textColor="@color/color_widget_text"
      android:textSize="14sp"
      tools:text=" 01/08 12:45"
      />

  <TextView
      android:id="@+id/difference"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:singleLine="true"
      android:textColor="@color/color_widget_text"
      android:textSize="23sp"
      tools:text="+10000"
      />

  <TextView
      android:id="@+id/text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/difference"
      android:layout_alignParentEnd="true"
      android:gravity="end"
      android:textColor="@color/color_widget_text"
      android:textSize="20sp"
      tools:text="100 SEK Cashback 10 SEK\nCOOP MARTENSTORGET"
      />

</RelativeLayout>